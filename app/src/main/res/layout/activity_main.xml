        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.788"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.612" />

    <RadioGroup
        android:id="@+id/bodyFrameGroup"
        android:layout_width="296dp"
        android:layout_height="36dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.474">


        <RadioButton
            android:id="@+id/smallButton"
            android:layout_width="81dp"
            android:layout_height="23dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/bodyFrameOption1" />

        <RadioButton
            android:id="@+id/mediumButton"
            android:layout_width="95dp"
            android:layout_height="24dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/bodyFrameOption2"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/largeButton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/bodyFrameOption3"
            android:textSize="20sp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/genderGroup"
        android:layout_width="217dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.824"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27"><![CDATA[>

        ]]>

        <RadioButton
            android:id="@+id/maleButton"
            android:layout_width="94dp"
            android:layout_height="23dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/genderOption1"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/femaleButton"
            android:layout_width="98dp"
            android:layout_height="25dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/genderOption2"
            android:textSize="16sp" />
    </RadioGroup>

